{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS", // Node.js default module system
        "strict": true, // Enable all strict type-checking options
        "esModuleInterop": true, // Better interoperability with CommonJS modules
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true, // Skip type checks of dependencies for faster builds
        "outDir": "./dist", // Output directory for compiled JS
        "rootDir": "./src", // Source code directory
        "sourceMap": true, // Enable source maps for debugging
        "moduleResolution": "node", // How modules are resolved, best for Node
        "resolveJsonModule": true, // Allows importing JSON files
        "allowSyntheticDefaultImports": true // Allow default imports from modules with no default export
    },
    "include": ["src/**/*"], // Files to compile
    "exclude": ["node_modules", "dist"] // Exclude these folders
}
